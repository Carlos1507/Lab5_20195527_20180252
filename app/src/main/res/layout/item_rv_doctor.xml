<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/image"
        android:layout_width="138.4dp"
        android:layout_height="153.1dp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="27dp"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="171.9dp"
        android:layout_marginStart="26.7dp"
        android:layout_marginEnd="26.7dp"
        android:backgroundTint="#4cd9d9d9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/nombreDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26.7dp"
        android:fontFamily="@font/averiasanslibrebold"
        android:textColor="@color/black"
        android:layout_marginStart="24.2dp"
        android:textSize="20sp"
        android:text="Dr.Pawan"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintStart_toEndOf="@id/image"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.2dp"
        android:fontFamily="@font/averiasanslibrebold"
        android:textColor="@color/black"
        android:layout_marginStart="24.2dp"
        android:textSize="12sp"
        android:text="Country - State - City"
        app:layout_constraintTop_toBottomOf="@id/nombreDoc"
        app:layout_constraintStart_toEndOf="@id/image"
        />

    <Button
        android:id="@+id/verDoctor"
        android:layout_width="79dp"
        android:layout_height="35dp"
        android:backgroundTint="#198eb6"
        android:text="Info"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/averiasanslibreregular"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:textSize="13sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="0sp"
        app:layout_constraintStart_toStartOf="@id/nombreDoc"
        app:layout_constraintTop_toBottomOf="@id/location"/>


</androidx.constraintlayout.widget.ConstraintLayout>